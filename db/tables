create table users(
    id serial primary key,
    email text not null,
    password text not null,
    user_type text,
    access_level integer
    session_cookie text
    reset_secret text
)

-- Makes the new users table start the serial at 1000000 instead of 1
ALTER SEQUENCE users_id_seq RESTART WITH 1000000;

insert into users(email, password, user_type, access_level)
values ('test@gmail.com', '******', 'admin', 10)

create table items(
    id serial primary key,
    userid integer references users(id),
    category varchar(255),
    subcategory varchar(255),
    description text,
    price varchar(255),
    created_date timestamp default NOW(),
    sold boolean default false,
    sold_date timestamp
)

insert into items (userid, category, subcategory, description, price)
values(1000019, 'pants', 'girls ages 5-6', 'lightly used pants', '9.99')


